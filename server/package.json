{
    "name": "roku-test-automation",
    "version": "1.0.33",
    "description": "Helps with automating functional tests",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "scripts": {
        "build": "rimraf out && tsc",
        "prepublishOnly": "npm run build && npm run tslint && rm -rf ./dist/device && cp -R ../device ./dist/device",
        "test": "nyc --exclude src/RokuDevice.ts mocha --full-trace --exclude src/RokuDevice.spec.ts src/**/*.spec.ts",
        "tslint": "tslint \"./src/**/*.ts\" --outputAbsolutePaths --project tsconfig.json",
        "test:device": "nyc mocha --full-trace src/RokuDevice.spec.ts",
        "test:all": "nyc mocha --full-trace src/**/*.spec.ts",
        "buildTypeCheckFiles": "ts-interface-builder src/types/ConfigOptions.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/triwav/roku-test-automation.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/triwav/roku-test-automation/issues"
    },
    "homepage": "https://github.com/triwav/roku-test-automation#readme",
    "dependencies": {
        "express": "^4.17.1",
        "fs-extra": "^7.0.1",
        "http-proxy-middleware": "^1.0.3",
        "needle": "^2.3.2",
        "path": "^0.12.7",
        "query-string": "^6.12.1",
        "ts-interface-checker": "^0.1.10"
    },
    "devDependencies": {
        "@types/chai": "^4.1.2",
        "@types/express": "^4.17.6",
        "@types/fs-extra": "^5.0.1",
        "@types/mocha": "^5.2.5",
        "@types/needle": "^2.0.4",
        "@types/node": "^13.11.1",
        "@types/sinon": "^7.5.2",
        "@types/xmljs": "^0.3.0",
        "chai": "^4.2.0",
        "mocha": "^5.2.0",
        "nyc": "^14.1.1",
        "rimraf": "^2.7.1",
        "sinon": "^7.2.3",
        "source-map-support": "^0.5.3",
        "ts-interface-builder": "^0.2.1",
        "ts-node": "^8.8.2",
        "tslint": "^5.20.1",
        "typescript": "^3.8.3"
    },
    "nyc": {
        "include": [
            "src/**/!(*.spec).ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register",
            "source-map-support/register"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "sourceMap": true,
        "instrument": true,
        "check-coverage": true,
        "lines": 100,
        "statements": 100,
        "functions": 100,
        "branches": 100
    }
}
