{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc-watch"
			],
			"option": "watch",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"clear": false
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "compile-automated-tests",
			"type": "npm",
			"options": {
				"cwd": "testProject"
			},
			"script": "automatedTests:compile",
			"problemMatcher": []
		}
	]
}
